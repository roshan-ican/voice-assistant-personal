{
  "name": "voice-todo-app",
  "version": "1.0.0",
  "description": "Multi-language voice-powered todo app with Notion integration",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx src/app.ts",
    "dev:watch": "tsx watch src/app.ts",
    "dev:docker": "docker-compose up --build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "./scripts/test-api.sh",
    "setup": "./scripts/dev-setup.sh",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "logs": "docker-compose logs -f app",
    "db:seed": "tsx scripts/seed-database.ts",
    "queue:monitor": "echo 'Visit http://localhost:8081 for Redis Commander'",
    "clean": "docker-compose down -v && docker system prune -f && rm -rf dist"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/websocket": "^8.3.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/helmet": "^11.1.1",
    "bullmq": "^4.15.4",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.3",
    "@google/generative-ai": "^0.2.1",
    "elevenlabs-node": "^1.0.7",
    "@notionhq/client": "^2.2.13",
    "@pinecone-database/pinecone": "^1.1.2",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/jest": "^29.5.8",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}